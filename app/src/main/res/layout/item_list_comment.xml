<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marginHorizomtal"
        android:layout_marginRight="@dimen/marginHorizomtal"
        android:layout_marginTop="@dimen/marginHorizomtal">
        <TextView
            android:id="@+id/tv_author_item_list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AUTHOR"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_comment_item_list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENT"/>
        <TextView
            android:id="@+id/tv_date_item_list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:gravity="end"
            android:textSize="12sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>